{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "type",
        "records"
    ],
    "properties": {
        "type": {
            "const": "record"
        },
        "records": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "identifier",
                    "tick",
                    "data"
                ],
                "properties": {
                    "type": {
                        "type": "string",
                        "const": "event"
                    },
                    "identifier": {
                        "type": "string",
                        "const": "after_entity_remove"
                    },
                    "tick": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "data": {
                        "type": "object",
                        "required": [
                            "removal_list"
                        ],
                        "properties": {
                            "removal_list": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "unique_id"
                                    ],
                                    "properties": {
                                        "unique_id": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
